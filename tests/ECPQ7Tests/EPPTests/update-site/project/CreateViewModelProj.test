get-view "Project Explorer" | get-tree | select "com.eclipsesource.makeithappen.model/model/task.ecore" 
    | select "com.eclipsesource.makeithappen.model/model/task.ecore" | get-menu "EMF Forms/Create View Model Project" 
    | click
get-window "New View Model Project" | get-editbox -after [get-label "Project name:"] | get-property text 
    | equals "com.eclipsesource.makeithappen.model.viewmodel1" | verify-true
with [get-window "New View Model Project"] {
    get-button "Next >" | click
    with [get-tree] {
        select "UserGroup" | select "Task" | select "User"
        select "Task" "User" "UserGroup"
        select "Task" "UserGroup"| select "Task" "User"
    }
    get-button Finish | click
}

with [get-tab-folder -index 3] {
    get-property "pages[0]" | equals "Task.view" | verify-true
    get-property "pages[1]" | equals "User.view" | verify-true
    get-property tabCount | equals 2 | verify-true
}

get-view "Project Explorer" | get-tree | select "com.eclipsesource.makeithappen.model.viewmodel1/plugin.xml" 
    | select "com.eclipsesource.makeithappen.model.viewmodel1/plugin.xml" | double-click
with [get-editor "com.eclipsesource.makeithappen.model.viewmodel1"] {
   get-tab-folder | get-tab-item "plugin.xml" | click
}
get-editor "com.eclipsesource.makeithappen.model.viewmodel1" | get-text-viewer | get-property text 
    | equals "<?xml version=\"1.0\" encoding=\"UTF-8\"?>\n"
    + "<?eclipse version=\"3.4\"?>\n"
    + "<plugin>\n"
    + "   <extension\n"
    + "         point=\"org.eclipse.emf.ecp.view.model.provider.xmi.file\">\n"
    + "<file filePath=\"viewmodels/User.view\"/>\n\n"
    + "<file filePath=\"viewmodels/Task.view\"/>\n\n"
    + "   </extension>\n\n"
    + "</plugin>" | verify-true
get-view "Project Explorer" | get-tree | select "com.eclipsesource.makeithappen.model.viewmodel1/build.properties" 
    | select "com.eclipsesource.makeithappen.model.viewmodel1/build.properties" | double-click
with [get-editor "com.eclipsesource.makeithappen.model.viewmodel1"] {
     get-tab-folder | get-tab-item "build.properties" | click
}
get-editor "com.eclipsesource.makeithappen.model.viewmodel1" | get-text-viewer | get-property text 
    | equals "bin.includes = META-INF/,\\\n"
    + "               plugin.xml,\\\n"
    + "               viewmodels/" | verify-true
with [get-editor "com.eclipsesource.makeithappen.model.viewmodel1" | get-tab-folder] {
    get-tab-item "plugin.xml" | click
    get-tab-item "MANIFEST.MF" | click
}
get-editor "com.eclipsesource.makeithappen.model.viewmodel1" | get-text-viewer | get-property text 
    | equals "Manifest-Version: 1.0\n"
    + "Bundle-ManifestVersion: 2\n"
    + "Bundle-Name: com.eclipsesource.makeithappen.model.viewmodel1\n"
    + "Bundle-SymbolicName: com.eclipsesource.makeithappen.model.viewmodel1;singleton:=true\n"
    + "Bundle-Version: 1.3.0.qualifier\n"
    + "Require-Bundle: org.eclipse.emf.ecp.view.model.provider.xmi" | verify-true
